<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.moqiaowen.mydemo8">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="MyDemo8">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SimpleListViewActivity"
            android:label="@string/title_activity_simple_list_view"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activity.CustomListViewActivity"
            android:label="@string/title_activity_custom_list_view"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activity.RecyclerViewActivity"
            android:label="@string/title_activity_recycler_view"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activity.HorizontalRecyclerViewActivity"
            android:label="@string/title_activity_horizontal_recycler_view"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activity.StaggeredGridRecyclerViewActivity"
            android:label="@string/title_activity_staggered_grid_recycler_view"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activity.GridRecyclerViewActivity"
            android:label="@string/title_activity_grid_recycler_view"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>